#! /bin/sh

LOG_FILE="./out/hpipedchild.log"

log( ) {
	echo "[`date`]: ${@}" >> ${LOG_FILE}
}

/bin/rm -f ${LOG_FILE}

log "child start ..."

read LINE

log "read input: ${LINE}"

case "${LINE}" in
	"out")
		echo "hello-OUT"
	;;
	"err")
		echo "hello-ERR" >&2
	;;
	*)
		echo "error"
		echo "error" >&2
	;;
esac

log "written output ..."
log "exiting"

exit 0
