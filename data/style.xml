<?xml version="1.0" encoding="ISO-8859-2"?>
<xsl:stylesheet version="1.0"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:yaal="http://codestation.org/yaal"
	exclude-result-prefixes="yaal">
	<xsl:output method="xml" encoding="ISO-8859-2" indent="yes" omit-xml-declaration="yes" />
	<xsl:template match="@* | node()">
		<xsl:copy>
			<xsl:apply-templates select="@* | node()" />
		</xsl:copy>
	</xsl:template>
	<xsl:template match="my_item">
		<uber_item>
			<xsl:apply-templates select="node()" />
		</uber_item>
	</xsl:template>
	<xsl:template match="xml:entity_reference">
		<xsl:value-of disable-output-escaping="yes" select="text()" />
	</xsl:template>
</xsl:stylesheet>
